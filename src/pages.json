{
  "pages": [
    {
      "path": "pages/home/home",
      "style": {
        "navigationBarTitleText": "tabs + list演示",
        "enablePullDownRefresh": true
      }
    },
    {
      "path": "pages/componentList/componentList",
      "style": {
        "navigationBarTitleText": "组件列表",
        "enablePullDownRefresh": false
      }
    },
    {
      "path": "pages/_modal/_modal",
      "style": {
        "navigationBarTitleText": "modal模态框",
        "enablePullDownRefresh": false
      }
    }
  ],
  "tabBar": {
    "color": "#1e1e1e",
    "selectedColor": "#3498db",
    "backgroundColor": "#eeeeee",
    "list": [
      {
        "pagePath": "pages/home/home",
        "iconPath": "",
        "selectedIconPath": "",
        "text": "tabs + list演示"
      },
      {
        "pagePath": "pages/componentList/componentList",
        "iconPath": "",
        "selectedIconPath": "",
        "text": "组件目录"
      }
    ]
  },
  "globalStyle": {
    "navigationBarTextStyle": "black",
    "navigationBarTitleText": "uni-app",
    "navigationBarBackgroundColor": "#eeeeee",
    "backgroundColor": "#eeeeee",
    "pageOrientation": "portrait",
    "onReachBottomDistance": 200
  },
  "easycom": {
    "custom": {
      "^u-(.*)": "uview-plus/components/u-$1/u-$1.vue",
      "^uni-(.*)": "@dcloudio/uni-ui/lib/uni-$1/uni-$1.vue",
      "^R(.*)": "@@/components/rewrite/R$1/R$1.vue",
      "^C(.*)": "@@/components/common/C$1/C$1.vue"
    }
  }
}