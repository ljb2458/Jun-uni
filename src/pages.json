{
  "pages": [
    {
      "path": "pages/tabbar/home/home",
      "style": {
        "navigationBarTitleText": "首页",
        "navigationStyle": "custom",
        "navigationBarTextStyle": "white",
        "enablePullDownRefresh": false
      }
    },
    {
      "path": "pages/tabbar/list/list",
      "style": {
        "navigationBarTitleText": "任务列表",
        "navigationStyle": "custom",
        "navigationBarTextStyle": "white",
        "enablePullDownRefresh": true
      }
    },
    {
      "path": "pages/tabbar/me/me",
      "style": {
        "navigationBarTitleText": "我的",
        "enablePullDownRefresh": true,
        "navigationStyle": "custom",
        "navigationBarTextStyle": "white"
      }
    }
  ],
  "subPackages": [
    {
      "root": "pages/library",
      "pages": [
        {
          "path": "bookList",
          "style": {
            "navigationBarTitleText": "知识库",
            "enablePullDownRefresh": false,
            "navigationStyle": "custom",
            "navigationBarTextStyle": "white"
          }
        }
      ]
    }
  ],
  "tabBar": {
    "color": "#1e1e1e",
    "selectedColor": "#0078D4",
    "backgroundColor": "#ffffff",
    "list": [
      {
        "pagePath": "pages/tabbar/home/home",
        "iconPath": "static/imgs/tabbar/home.png",
        "selectedIconPath": "static/imgs/tabbar/home_active.png",
        "text": "首页"
      },
      {
        "pagePath": "pages/tabbar/list/list",
        "iconPath": "static/imgs/tabbar/list.png",
        "selectedIconPath": "static/imgs/tabbar/list_active.png",
        "text": "任务列表"
      }
    ]
  },
  "globalStyle": {
    "navigationBarTextStyle": "black",
    "navigationBarTitleText": "uni-app",
    "navigationBarBackgroundColor": "#ffffff",
    "backgroundColor": "#ffffff",
    "pageOrientation": "portrait",
    "onReachBottomDistance": 200,
    "app-plus": {
      "animationType": "slide-in-right"
    }
  },
  "easycom": {
    "custom": {
      "^Re(.*)": "@/components/rewrite/Re$1/Re$1.vue",
      "^Gr(.*)": "@/components/group/Gr$1/Gr$1.vue",
      "^Co(.*)": "@/components/common/Co$1/Co$1.vue",
      "^uv-(.*)": "@climblee/uv-ui/components/uv-$1/uv-$1.vue"
    }
  }
}